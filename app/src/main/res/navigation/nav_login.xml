<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dullfan.shopping.ui.fragment.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/alerter_slide_in_from_left"
            app:exitAnim="@anim/alerter_slide_out_to_right"
            app:popEnterAnim="@anim/alerter_slide_in_from_left"
            app:popExitAnim="@anim/alerter_slide_out_to_right" />
        <action
            android:id="@+id/action_loginFragment_to_retrievePasswordFragment"
            app:destination="@id/retrievePasswordFragment"
            app:enterAnim="@anim/alerter_slide_in_from_left"
            app:exitAnim="@anim/alerter_slide_out_to_right"
            app:popEnterAnim="@anim/alerter_slide_in_from_left"
            app:popExitAnim="@anim/alerter_slide_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dullfan.shopping.ui.fragment.login.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/retrievePasswordFragment"
        android:name="com.dullfan.shopping.ui.fragment.login.RetrievePasswordFragment"
        android:label="RetrievePasswordFragment" />
</navigation>